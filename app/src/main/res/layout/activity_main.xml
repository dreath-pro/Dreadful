<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_menu_background"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/classicButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A60606"
            android:fontFamily="@font/horroroid"
            android:text="@string/classic_button"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A60606"
            android:fontFamily="@font/horroroid"
            android:text="@string/test_button"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/wikiButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A60606"
            android:fontFamily="@font/horroroid"
            android:text="@string/wiki_button"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A60606"
            android:fontFamily="@font/horroroid"
            android:text="@string/quit_button"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>